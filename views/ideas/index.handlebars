<div class="container mt-3">
    <h1>Your Ideas</h1>
    {{#each data}}
    <div class="card mb-3">
        <div class="card-header">
            <span class="text-capitalize lead">{{idea}}</span>
        </div>
        <div class="card-body">
            <p>{{details}}</p>
            <a class="btn btn-sm mr-1 btn-success float-left" href="/ideas/edit/{{id}}">Edit</a>
            <form action="/ideas/{{id}}?_method=DELETE" method="post" class="float-left">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" class="btn btn-sm btn-danger" value="Delete">
            </form>
        </div>
    </div>
    {{else}}
    <p>No ideas saved.</p>
    {{/each}}
</div>