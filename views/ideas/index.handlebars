<div class="container my-3">
    <ul class="list-group">
        {{#each data}}
        <li class="list-group-item">
            <h4 class="text-capitalize">{{idea}}</h4>
            <hr>
            <p class="font-weight-light">{{details}}</p>
            <hr>
            <a class="btn btn-sm mr-1 btn-success float-left" href="/ideas/edit/{{id}}">
                <i class="fa fa-pencil-alt mr-1"></i>Edit</a>
            <form action="/ideas/{{id}}?_method=DELETE" method="post" class="float-left">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-sm btn-danger">
                    <i class="fa fa-trash-alt mr-1"></i>Delete</button>
            </form>
        </li>
        {{else}}
        <p>No ideas saved.</p>
        {{/each}}
    </ul>
</div>