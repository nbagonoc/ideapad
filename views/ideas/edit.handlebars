<div class="container mt-3">
    {{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}} {{/each}}
    <div class="card">
        <div class="card-body">
            <h3 class="font-weight-light">Edit an idea</h3>
            <hr>
            <form action="/ideas/{{data.id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="idea">Your Idea</label>
                    <input type="text" class="form-control" name="idea" value="{{data.idea}}" required>
                </div>
                <div class="form-group">
                    <label for="details">Details</label>
                    <textarea class="form-control" name="details" rows="3" required>{{data.details}}</textarea>
                </div>
                <button type="submit" class="btn btn-success btn-sm">
                    <i class="fa fa-check-circle mr-1"></i>Submit</button>
                <a href="/ideas" class="btn btn-danger btn-sm">
                    <i class="fa fa-times-circle mr-1"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>