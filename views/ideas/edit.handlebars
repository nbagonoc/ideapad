<div class="container mt-3">
    {{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}} {{/each}}
    <div class="card">
        <div class="card-body">
            <h3 class="font-weight-light">Edit an idea</h3>
            <hr>
            <form action="/ideas/{{data.id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group row">
                    <label for="idea" class="col-form-label col-sm-2">Your Idea</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="idea" value="{{data.idea}}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="details" class="col-form-label col-sm-2">Details</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" name="details" required>{{data.details}}</textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-success btn-sm">Submit</button>
                <a href="/ideas" class="btn btn-danger btn-sm">Cancel</a>
            </form>
        </div>
    </div>
</div>